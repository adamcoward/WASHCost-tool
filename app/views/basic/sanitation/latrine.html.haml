= content_for :title do
  3 of 9 (sanitation Source) - Basic Sanitation Calculator

.question
  %h1.question--title= t 'basic.sanitation.questionnaire.latrine.question'

  .question--answer

    = form_for @questionnaire, :url => basic_sanitation_update_url( I18n.locale, 'capital_expenditure' ), :html => { 'data-dynamic_form' => basic_sanitation_dynamic_update_url( I18n.locale ) } do |f|

      .question--radios
        - options_for_latrine_technologies.each do |option|
          = f.label( "latrine_#{option[1]}", class: "question--radios--label question--radios--label-narrow" ) do
            = f.radio_button( :latrine, option[1], :class => 'question--radios--radio' )
            %span.question--checked_icon
            %span{ :class => "question--radios--icon icon--tool-#{option[0]}" }
            %span.question--radios--text= t( "basic.sanitation.questionnaire.latrine.options.#{option[0]}" )

      .question--buttons
        = submit_tag t( 'buttons.next' ), :class => 'button'
