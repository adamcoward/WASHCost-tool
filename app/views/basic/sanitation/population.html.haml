= content_for :title do
  2 of 9 (Population) - Basic Sanitation Calculator

.question
  %h1.question--title= t 'basic.sanitation.questionnaire.population.question'

  .question--answer

    .question--answer--title= t 'basic.shared.questionnaire.people'

    = form_for @questionnaire, :url => basic_sanitation_update_url( I18n.locale, 'latrine' ), :html => { 'data-dynamic_form' => basic_sanitation_dynamic_update_url( I18n.locale ) } do |f|

      .slider
        %input.slider--value{ :type => 'text', :value => @questionnaire.population != nil ? number_with_precision( @questionnaire.population, :precision => 0, :locale => I18n.locale ) : @questionnaire.minimum_population }
        .slider--widget
        = f.hidden_field :population, { :value => @questionnaire.population ? @questionnaire.population : @questionnaire.minimum_population, 'data-slider-input' => 'true', 'data-logarithmic' => 'true', 'data-slider-min' => @questionnaire.minimum_population, 'data-slider-max' => @questionnaire.maximum_population }

      .question--buttons
        = submit_tag t( 'buttons.next' ), :class => 'button'

.info_tab
  .info_tab--icon
  .info_tab--container
    .info_tab--content
      %p.info_tab--content--text= raw format_info_text 'basic.sanitation.questionnaire.population.info'
