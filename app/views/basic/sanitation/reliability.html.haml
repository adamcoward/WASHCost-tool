= content_for :title do
  11 of 11 (Reliability) - Basic Sanitation Calculator

.question
  %h1.question--title= t 'basic.sanitation.questionnaire.reliability.question'

  .question--answer

    = form_for @questionnaire, :url => basic_sanitation_update_url( I18n.locale, 'report' ), :html => { 'data-dynamic_form' => basic_sanitation_dynamic_update_url( I18n.locale ) } do |f|

      .question--radios
        - options_for_latrine_reliability.each do |option|
          = f.label( "reliability_#{option[1]}", :class => "question--radios--label question--radios--label" ) do
            = f.radio_button :reliability, option[1], :class => 'question--radios--radio'
            %span.question--checked_icon
            %span{ :class => "question--radios--icon icon--tool-#{option[0]}" }
            %span.question--radios--text= t( "basic.sanitation.questionnaire.reliability.options.#{option[0]}" )

      .question--buttons
        = submit_tag((t 'buttons.view_report'), class: 'button')

.info_tab
  .info_tab--icon
  .info_tab--container
    .info_tab--content
      %p.info_tab--content--text= raw format_info_text 'basic.sanitation.questionnaire.reliability.info'
