.basic-tool
  .view-report.large-2.columns
    = link_to t('buttons.view_report'), "/cal/#{controller_name}/report"
  .progress-report.large-8.columns
    .header
      %a= "#{t("footer.#{controller_name}")} (#{flash[:percent_complete]}%)"
    .bar
      .washcost-bar
        %span.meter{:style => "width: #{flash[:percent_complete]}%"}
  .save-report.large-2.columns
    = link_to t('buttons.save_report'), save_basic_reports_path(querier: 'link', tool_name: 'water'), :remote => true, :class => "save_report link_action_report", method: :post
