!!!
%html
  %head
    / Modernizr
    = stylesheet_link_tag "static/normalize.css"
    %script{:src => "http://modernizr.com/downloads/modernizr-latest.js", :type => "text/javascript"}
    / Fonts
    %link{:href => "http://fonts.googleapis.com/css?family=Merriweather:400,700italic,300italic", :rel => "stylesheet", :type => "text/css"}/
    %link{:href => "http://fonts.googleapis.com/css?family=Lato:100,300", :rel => "stylesheet", :type => "text/css"}/
    / CSS
    = stylesheet_link_tag "static/styleSF.css"
    :javascript
      document.write('<div id="loader" style="display:table; position: absolute; top: 0; left: 0; width: 100%; height: 100%; z-index: 10000; background-color: #b1a172; background: url(#{asset_path "static/loadbg.jpg"}) no-repeat center center fixed; -webkit-background-size: cover;	-moz-background-size: cover; -o-background-size: cover;	background-size: cover;">'
          + '<div style="display:table-cell; vertical-align:middle; text-align: center;">'
          + '<img style="margin-bottom:20px;" src=#{asset_path "static/WClong.png"} /><br>'
          + '<img src="#{asset_path 'static/loader.gif'}" />'
          + '</div></div>');
  %body
    = yield
