<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

  <title>WashCostApp - Advances</title>
  <meta name="description" content="">
  <meta name="author" content="">

  <meta name="viewport" content="width=device-width">

  <link href="/assets/global_advanced_select_page.css" media="all" rel="stylesheet" type="text/css">
  <script src="/assets/modernizr.js" type="text/javascript"></script>

</head>
<body class="launchPage">
<div class="wrapper bgGradient">
  <div class="header">
    <a href="#" class="logo">
      <img src="/assets/logoWashCost8.png" alt="WASHCost" />
    </a>
    <ul>
      <li><a href="#">about</a></li>
      <li><a href="#">contact</a></li>
      <li>
        <ul class="languageSwitcher">
          <li><a class="active" href="#">English</a></li>
          <li><a href="#">French</a></li>
        </ul>
      </li>
      <li><a class="sign" href="#">Sign in</a></li>
    </ul>
  </div>

  <section class="main">
    <div class="mainWrapper">
      <head>
        <h1>Select which calculator you wish to use</h1>
      </head>
      <section class="calculatorSwitch">
        <ul>
          <li class="firstChild">
            <a class="active" href="#">
              <figure>
                <img src="/assets/iconWaterAdvance8.png" alt="Advance water icon" onclick="submitForm('water')"/>
              </figure>
              <figcaption>Water</figcaption>
            </a>
          </li>
          <li class="lastChild">
            <a href="#">
              <figure>
                <img src="/assets/iconSanitationAdvance8.png" alt="Advance water icon"onclick="submitForm('sanitation')" />
              </figure>
              <figcaption>Sanitation</figcaption>
            </a>
          </li>
        </ul>
        <ul class="pag">
          <li><a href="#"><span>&#43;</span> Calculate existing scheme</a></li>
          <li><a href="#"><span>&#43;</span> Calculate planned scheme</a></li>
        </ul>
      </section>
    </div>
  </section>
  <footer>
    <div class="footerWrapper">
      <h2>Final Report</h2>
      <div class="progressBar">
        <div class="outerBar">
          <div class="innerBar" style="width:30%"></div>
          <p>30% Complete</p>
        </div>
      </div>
    </div>
  </footer>
  <form action="/select_advanced/" method="post" id="advancedSelectorForm">
    <input type="hidden" name="targetForm" id="targetFormType"/>
  </form>
  <script src="/assets/jquery-1.9.1.js" type="text/javascript"></script>
  <script src="/assets/chosen.jquery.js" type="text/javascript"></script>
  <script src="/assets/application.js" type="text/javascript"></script>
  <script>

    function submitForm(targetFormType)
    {
        $('#targetFormType').val(targetFormType);
        $('#advancedSelectorForm').submit();
    }


  </script>
</div>
</body>
