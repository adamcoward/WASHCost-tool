.row
  %h2.text-center Sign up
  = form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
    = devise_error_messages!
    .large-6.columns
      %div
        = f.label :first_name
        = f.text_field :first_name, :autofocus => true
      %div
        = f.label :company
        = f.password_field :company
      %div
        = f.label :email
        = f.email_field :email
      %div
        = f.label :password
        = f.password_field :password
    .large-6.columns
      %div
        = f.label :last_name
        = f.password_field :last_name
      %div
        = f.label :country
        = f.password_field :country
      %div
        = f.label :prefered_language
        = f.password_field :prefered_language
      %div
        = f.label :password_confirmation
        = f.password_field :password_confirmation
      .right= f.submit "Sign up", class: 'button'
= render "devise/shared/links"
