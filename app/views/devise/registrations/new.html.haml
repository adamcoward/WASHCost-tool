.boxed_container.boxed_container-full_height
  .boxed_content
    .page_content

      = simple_form_for resource, :as => resource_name, :url => registration_path(resource_name), html: { :class => 'standalone_form' } do |f|

        %h1.standalone_form--heading Create your account

        = render "devise/shared/messages"

        .standalone_form--field.standalone_form--field-text
          = f.input :email, :required => false, label: false, input_html: { class: 'standalone_form--field--input standalone_form--field--input-text' }, placeholder: 'Email'

        .standalone_form--field.standalone_form--field-text
          = f.input :password, :required => false, label: false, input_html: { class: 'standalone_form--field--input standalone_form--field--input-text' }, placeholder: 'Password'

        .standalone_form--field.standalone_form--field-text
          = f.input :password_confirmation, :required => false, label: false, input_html: { class: 'standalone_form--field--input standalone_form--field--input-text' }, placeholder: 'Repeat your password'

        .standalone_form--footer
          .standalone_form--buttons
            = f.button :submit, "Register", class: 'button'

          .standalone_form--links
            = render "devise/shared/links"

        .standalone_form--promo
          Please visit the
          = link_to 'WASHCost Blog', 'http://blog.washcost.org/', :class => 'standalone_form--promo--link'
          to learn more about the Advanced Calculator
