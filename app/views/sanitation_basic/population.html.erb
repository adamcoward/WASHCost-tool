<% @title = "Population" %>

<h1 class="basic_tool_header_item"><%= t 'form.sanitation_basic.population.question' %></h1>
<%= form_tag({controller: "sanitation_basic", action: "population"}, class: "main_content", id: "waterBasicForm") do %>

    <div class="choices">
      <div class="value">
        <div id="populationValue" class="valueOutput">500</div>
        <div class="valueLabel"><%= t 'form.sanitation_basic.population.value_label' %></div>
      </div>
      <div id="populationSlider" data-slider_value=<%=@population%> ></div>
    </div>

    <input type="hidden" name="population"/>
    <%= submit_tag((t 'buttons.next'), class: "next_button") %>
    <a class="skip" href="./capital">skip this question</a>
<% end %>
