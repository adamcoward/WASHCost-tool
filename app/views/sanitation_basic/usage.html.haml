- @title = "10 of 11 (Usage)"
.row
  .large-12.columns
    .question= t 'form.sanitation_basic.usage.question'
.row
  .large-12.columns
    .choices-section
      = form_tag({controller: 'sanitation_basic', action: 'usage'}, class: 'main_content', id: 'sanitationBasicForm') do
        .select-container.usage
          - @usage[:choices].each_with_index do |choice, index|
            = label_tag(choice, nil, class: "#{@usage[:class]}-#{index}") do
              = radio_button_tag('usage', index, index == @usage[:value], id: choice)
              %span= t "form.sanitation_basic.usage.answers.a#{index}"
        .action
          = submit_tag((t 'buttons.next'), class: 'button button-basic-questionnaire')
