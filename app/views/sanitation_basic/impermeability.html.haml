- @title = "7 of 11 (Impermeablity)"
.row
  .large-12.columns
    .question= t 'form.sanitation_basic.impermeability.question'
.row
  .large-12.columns
    .choices-section
      = form_tag({controller: 'sanitation_basic', action: 'impermeability'}, class: 'main_content', id: 'sanitationBasicForm') do
        .select-container.impermeability
          - @impermeability[:choices].each_with_index do |choice, index|
            = label_tag(choice, nil, class: "#{@impermeability[:class]}-#{index}") do
              = radio_button_tag('impermeability', index, index == @impermeability[:value], id: choice)
              %span= t "form.sanitation_basic.impermeability.answers.a#{index}"
        .action
          = submit_tag((t 'buttons.next'), class: 'button button-basic-questionnaire')
