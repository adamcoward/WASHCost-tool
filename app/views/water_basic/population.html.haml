- @title = '3 of 9 (Population)'
.row
  .large-12.columns
    .question= @population[:question_label]
.row
  .large-12.columns
    .choices-section
      = form_tag({controller: 'water_basic', action: 'population'}, class: 'main_content', id: 'waterBasicForm') do
        .slider-section
          .value
            .valueLabel.caption= t 'form.water_basic.population.value_label'
            #populationValue.valueOutput.slider-output 500
          #populationSlider.slider-container{'data-slider_value' => @population[:value].present? ? @population[:value] : 0}
            .test-cursor
        %input{:name => 'population', :type => 'hidden'}
        .action
          = submit_tag((t 'buttons.next'), class: 'button button-basic-questionnaire')
.info-tab
  %a.tab{:href => '#'} infoTab
  .tab-content
    %p= t 'form.water_basic.population.info'
