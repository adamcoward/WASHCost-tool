- @title = '2 of 9 (Water Source)'
.row
  .large-12.columns
    .question= t 'form.water_basic.water.question'
.row
  .large-12.columns
    .choices-section
      = form_tag({controller: 'water_basic', action: 'water'}, class: 'main_content', id: 'waterBasicForm') do
        .select-container.water
          - @water[:choices].each_with_index do |choice, index|
            = label_tag(choice, nil, class: "#{@water[:class]}-#{index}") do
              = radio_button_tag('water', index, index == @water[:value], id: choice)
              %span= t "form.water_basic.water.answers.a#{index}"
        %input{'data-target' => 'water', :name => 'target-select', :type => 'hidden'}
        .action
          = submit_tag((t 'buttons.next'), class: 'button button-basic-questionnaire')
.info-tab
  %a.tab{:href => '#'} infoTab
  .tab-content
    %h3
    %p
