= content_for :title do
  Start

.question
  %h1.question--title= t 'form.shared.country.question'

  .question--answer

    = image_tag 'world8.png', alt: "Which country are we", class: "question--image"

    = form_tag( { controller: "water_basic", action: "country" }, class: "form-country", id: "waterBasicForm" ) do

      .choices-select.text-center
        = select_tag "country", options_for_select(get_countries, flash[:country_code]), :include_blank=>(t 'form.shared.country.placeholder'), :class=>"chzn-select", :tabindex => 1

      .action
        = submit_tag((t 'buttons.next'), class: "button button-basic-questionnaire")
