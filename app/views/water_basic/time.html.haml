- @title = '6 of 9 (Access)'
.row
  .large-12.columns
    .question= t 'form.water_basic.time.question'
.row
  .large-12.columns
    .choices-section
      = form_tag({controller: 'water_basic', action: 'time'}, class: 'main_content', id: 'waterBasicForm') do
        .choices.slider-section.time
          .value
            .valueLabel.caption= t 'form.water_basic.time.value_label'
            .choiceTime
              #timeValue.valueOutput.slider-output{'data-slider_value' => @time.present? ? @time : 0} #{t 'form.water_basic.time.answers.a0'}
            .labeling-images
              %img.imgHouse{:alt => 'house', :src => '/assets/waterBasicTimeHouse8.png'}
              %img.imgTime{:alt => 'house', :src => '/assets/waterBasicTimeWaterDrop8.png'}
          #timeSlider.slider-container
            .test-cursor
        %input{:name => 'time', :type => 'hidden'}
        .action
          = submit_tag((t 'buttons.next'), class: 'button button-basic-questionnaire')
