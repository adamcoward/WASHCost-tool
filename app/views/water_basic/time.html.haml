= content_for :title do
  6 of 9 (Access)

.question
  %h1.question--title= t 'form.water_basic.time.question'

  .question--answer

    = form_tag( { controller: 'water_basic', action: 'time' }, id: 'waterBasicForm') do

      .question--radios
        - @time[:choices].each_with_index do |choice, index|
          - index_inverted = 3 - index # is necessary to invert due the business rules
          = label_tag( choice, nil, class: "question--radios--label" ) do
            = radio_button_tag( 'time', index_inverted, index_inverted == @time[:value], id: choice, :class => 'question--radios--radio' )
            %span.question--checked_icon
            %span{ :class => "question--radios--icon icon--tool-#{choice}" }
            %span.question--radios--text= t "form.water_basic.time.answers.a#{index}"

      .question--buttons
        = submit_tag((t 'buttons.next'), class: 'button')
