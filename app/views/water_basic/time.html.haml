.row
  .large-12.columns
    .question= t 'form.water_basic.time.question'
.row
  .large-12.columns
    .choices-section
      = form_tag({controller: 'water_basic', action: 'time'}, class: 'main_content', id: 'waterBasicForm') do
        .select-container.quality
          - @time[:choices].each_with_index do |choice, index|
            - index_inverted = 3 - index # is necessary to invert due the business rules
            = label_tag(choice, nil, class: "#{@time[:class]}-#{index_inverted}") do
              = radio_button_tag('time', index_inverted, index_inverted == @time[:value], id: choice)
              %span= t "form.water_basic.time.answers.a#{index}"
        .action
          = submit_tag((t 'buttons.next'), class: 'button button-basic-questionnaire')
