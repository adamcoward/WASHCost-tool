- @title = "9 of 9 (Reliability)"
.row
  .large-12.columns
    .question= t 'form.water_basic.reliability.question'
.row
  .large-12.columns
    .choices-section
      = form_tag({controller: 'water_basic', action: 'reliability'}, class: 'main_content', id: 'waterBasicForm') do
        .select-container
          - @reliability[:choices].each_with_index do |choice, index|
            = label_tag(choice, nil, class: '') do
              = radio_button_tag('reliability', index, index == @reliability[:value], id: choice)
              %span= t "form.water_basic.reliability.answers.a#{index}"
        .action
          = submit_tag((t 'buttons.complete'), class: 'button button-basic-questionnaire')
