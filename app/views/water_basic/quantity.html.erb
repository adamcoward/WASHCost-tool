<% @title = "7 of 9 (Water Source)" %>

<h1 class="basic_tool_header_item">
  <%= t 'form.water_basic.quantity.question' %>
  <span><%= t 'form.water_basic.quantity.value_label' %></span>
</h1>
<%= form_tag({controller: "water_basic", action: "quantity"}, class: "main_content", id: "waterBasicForm") do %>

  <ul class="waterSource">
    <li>
      <%= label_tag("waterLessThan", nil, class: "tickCheckBox") do %>
        <%= radio_button_tag("r_quantity", 0, 0 == flash[:quantity], id: "waterLessThan") %>
        <span><%= t 'form.water_basic.quantity.answers.a0' %></span>
      <% end %>
    </li>
    <li>
      <%= label_tag("waterFromFive", nil, class: "tickCheckBox waterSource_01") do %>
        <%= radio_button_tag("r_quantity", 1, 1 == flash[:quantity], id: "waterFromFive") %>
        <span><%= t 'form.water_basic.quantity.answers.a1' %></span>
      <% end %>
    </li>
    <li>
      <%= label_tag("waterFromTwenty", nil, class: "tickCheckBox waterSource_02") do %>
        <%= radio_button_tag("r_quantity", 2, 2 == flash[:quantity], id: "waterFromTwenty") %>
        <span><%= t 'form.water_basic.quantity.answers.a2' %></span>
      <% end %>
    </li>
    <li>
      <%= label_tag("waterMoreThan", nil, class: "tickCheckBox waterSource_03") do %>
        <%= radio_button_tag("r_quantity", 3, 3 == flash[:quantity], id: "waterMoreThan") %>
        <span><%= t 'form.water_basic.quantity.answers.a3' %></span>
      <% end %>
    </li>
  </ul>

  <input type="hidden" name="quantity"/>
  <%= submit_tag((t 'buttons.next'), class: "next_button") %>
    <a class="skip" href="./quality">skip this question</a>


<% end %>
