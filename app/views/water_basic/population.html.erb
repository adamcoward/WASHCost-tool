<% @title = "3 of 9 (Population)" %>

<h1><%= t 'form.water_basic.population.question' %></h1>

<%= form_tag({controller: "water_basic", action: "population"}, class: "main_content", id: "waterBasicForm") do %>

  <div class="choices">
    <div class="value">
      <div id="populationValue" class="valueOutput">500</div>
      <div class="valueLabel"><%= t 'form.water_basic.population.value_label' %></div>
    </div>
    <div id="populationSlider" data-slider_value=<%=flash[:population]%> ></div>
  </div>

  <input type="hidden" name="population"/>
  <%= submit_tag((t 'buttons.next'), class: "next_button") %>
  <a class="skip" href="./capital">skip this question</a>

  <div class="infoTab">
    <a href="#" class="tab">infoTab</a>
    <div class="tabContent">
      <p><%= t 'form.water_basic.population.info' %></p>
    </div>
  </div>


<% end %>
